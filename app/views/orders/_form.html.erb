<%= simple_form_for @path, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :time %>
  <%= error_span(@order[:time]) %>
  <%= f.input :what %>
  <%= error_span(@order[:what]) %>
  <%= f.input :width %>
  <%= error_span(@order[:width]) %>
  <%= f.input :height %>
  <%= error_span(@order[:height]) %>
  <%= f.input :length %>
  <%= error_span(@order[:length]) %>
  <%= f.input :volume %>
  <%= error_span(@order[:volume]) %>
  <%= f.input :weight %>
  <%= error_span(@order[:weight]) %>
  <%= f.input :description %>
  <%= error_span(@order[:description]) %>
  <%= f.input :price %>
  <%= error_span(@order[:price]) %>
  <%= f.input :cargo_picture %>
  <%= error_span(@order[:price]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                category_orders_path(@category), :class => 'btn btn-default' %>
<% end %>
